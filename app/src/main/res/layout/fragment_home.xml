<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/menu_detail_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:tabTextColor="@color/black">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部通话" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未接来电" />


    </com.google.android.material.tabs.TabLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/menu_detail_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.viewpager2.widget.ViewPager2>
        <LinearLayout
            android:id="@+id/main_phonecard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="bottom|end"
            android:visibility="gone"
            android:clickable="true"
            android:orientation="vertical"
            android:background="#40000000"
            >
        <LinearLayout
            android:id="@+id/phonecard_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="bottom|end"
            android:visibility="visible"
            android:orientation="vertical"
            android:background="#40000000"
            />
        <LinearLayout
            android:id="@+id/phonecard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            android:visibility="visible"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_text2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/bt_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:visibility="invisible"
                    android:clickable="true"
                    android:background="@drawable/ic_del"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bt_one"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/phone_button"
                    android:text="@string/_1"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/bt_two"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/phone_button"
                    android:gravity="center"
                    android:text="2"
                    android:clickable="true"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/bt_three"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/phone_button"
                    android:gravity="center"
                    android:text="3"
                    android:clickable="true"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bt_four"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/phone_button"
                    android:text="4"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/bt_five"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/phone_button"
                    android:text="5"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/bt_six"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/phone_button"
                    android:text="6"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bt_seven"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/phone_button"
                    android:text="7"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/bt_eight"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/phone_button"
                    android:text="8"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/bt_nine"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/phone_button"
                    android:text="9"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bt_star"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/phone_button"
                    android:text="*"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/bt_zero"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/phone_button"
                    android:text="0"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/bt_bottom"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/phone_button"
                    android:text="#"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/bt_call"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_phone__call"
                    android:textSize="20sp"
                    android:clickable="true" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/processing_fab_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:fab_addButtonColorNormal="#CCBA68C8"

            app:fab_labelsPosition="left"
            tools:ignore="RelativeOverlap"
            
            >

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/white"
                app:fab_colorNormal="#CC81C784"
                app:fab_icon="@drawable/ic_call"
                app:fab_title="123" />


        </com.getbase.floatingactionbutton.FloatingActionsMenu>

    </RelativeLayout>
</LinearLayout>