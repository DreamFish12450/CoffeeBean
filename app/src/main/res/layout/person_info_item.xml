<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_recommend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.example.coffeebean.util.RoundAngleImageView
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="8dp"
        android:background="@color/light_grey"
        android:backgroundTint="@color/light_grey"
        app:roundHeight="24dp"
        app:roundWidth="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/menu_recommend_image_container"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/light_grey"
            app:cardCornerRadius="60dp">

            <com.example.coffeebean.util.RoundAngleImageView
                android:id="@+id/person_avatar_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/avater"
                app:roundHeight="45dp"
                app:roundWidth="45dp" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/menu_recommend_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/username_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:layout_weight="3"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="梦鱼鱼"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/person_login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:background="@drawable/btn_nomal"
                    android:textColor="#696969"
                    android:textSize="14sp"
                    android:text="登录" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/person_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="199673029203" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>